<Window
    x:Class="LotterySoftware.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    Title="LotterySoftware"
    Width="800"
    Height="600"
    MinWidth="800"
    MinHeight="600"
    AllowsTransparency="True"
    DataContext="{Binding Source={StaticResource Locator}, Path=Main}"
    Icon="../Images/Lottery.png"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Window.Style>
        <Style TargetType="Window">
            <Setter Property="ResizeMode" Value="CanResize" />
            <Setter Property="WindowChrome.WindowChrome">
                <Setter.Value>
                    <WindowChrome CaptionHeight="0" ResizeBorderThickness="5" />
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Style>

    <Window.InputBindings>
        <KeyBinding Key="Space" Command="{Binding LotteryButtonCmd}" />
    </Window.InputBindings>

    <Window.Resources>
        <ResourceDictionary>
            <system:String x:Key="MinBtn">F1M0,1L12.001,1 12.001,0 0,0z</system:String>
            <system:String x:Key="MaxBtn">F1M11,11L1,11 1,1 11,1z M11,0L1,0 0,0 0,1 0,11 0,12 1,12 11,12 12,12 12,11 12,1 12,0z</system:String>
            <system:String x:Key="RecoveryBtn">F1M11,8L9,8 9,4 9,3 8,3 4,3 4,1 11,1z M8,11L1,11 1,4 3,4 4,4 8,4 8,8 8,9z M11,0L4,0 3,0 3,1 3,3 1,3 0,3 0,4 0,11 0,12 1,12 8,12 9,12 9,11 9,9 11,9 12,9 12,8 12,1 12,0z</system:String>
            <system:String x:Key="CloseBtn">F1M11.706,0.706L11,0 5.852,5.146 0.706,0 -0.001,0.706 5.146,5.852 -0.001,11 0.706,11.706 5.852,6.56 11,11.706 11.706,11 6.56,5.852z</system:String>
            <Style x:Key="CloseButton" TargetType="Button">
                <Setter Property="Foreground" Value="{DynamicResource GridButtonBGBrush}" />
                <Setter Property="SnapsToDevicePixels" Value="True" />
                <Setter Property="OverridesDefaultStyle" Value="True" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border
                                Name="border"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="True">
                                <Grid
                                    Name="placeHolder"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                    <Path
                                        Name="Inner"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Data="{Binding Content, RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
                                        Fill="#FF9AA4D0"
                                        SnapsToDevicePixels="True"
                                        Stretch="Uniform"
                                        Stroke="{TemplateBinding BorderBrush}"
                                        UseLayoutRounding="True" />
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsEnabled" Value="false">
                                    <Setter TargetName="Inner" Property="Fill" Value="{DynamicResource DisableCtrlFGBrush}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#d01212" />
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style x:Key="ChoiceButton" TargetType="Button">
                <Setter Property="Foreground" Value="{DynamicResource GridButtonBGBrush}" />
                <Setter Property="SnapsToDevicePixels" Value="True" />
                <Setter Property="OverridesDefaultStyle" Value="True" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border
                                Name="border"
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="True">
                                <Grid
                                    Name="placeHolder"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                    <Path
                                        Name="Inner"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Data="{Binding Content, RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
                                        Fill="#FF9AA4D0"
                                        SnapsToDevicePixels="True"
                                        Stretch="Uniform"
                                        Stroke="{TemplateBinding BorderBrush}"
                                        UseLayoutRounding="True" />
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsEnabled" Value="false">
                                    <Setter TargetName="Inner" Property="Fill" Value="{DynamicResource DisableCtrlFGBrush}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="BorderBrush" Value="#ffffff" />
                    </Trigger>
                </Style.Triggers>
            </Style>
            <Style x:Key="ButtonBackground" TargetType="{x:Type Button}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border
                                x:Name="MyBackgroundElement"
                                BorderBrush="Black"
                                BorderThickness="1">
                                <ContentPresenter
                                    x:Name="ButtonContentPresenter"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsEnabled" Value="false">
                                    <Setter Property="Foreground" Value="#bbbbbb" />
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="true">
                                    <Setter Property="Foreground" Value="Black" />
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="MyBackgroundElement" Property="Background" Value="#3448a1" />
                                    <Setter Property="Foreground" Value="White" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Viewbox Stretch="Fill">
        <Border
            BorderBrush="#3448a1"
            BorderThickness="2"
            CornerRadius="4"
            SnapsToDevicePixels="True">

            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="10"
                    Direction="0"
                    ShadowDepth="0" />
            </Border.Effect>

            <Grid Background="#f1f1f1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="48" />
                    <RowDefinition Height="47" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="400" />
                    <RowDefinition Height="57" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="683" />
                    <ColumnDefinition Width="52" />
                </Grid.ColumnDefinitions>

                <Canvas
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Background="#3448a1">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseLeftButtonDown">
                            <i:InvokeCommandAction Command="{Binding MoveWindowCmd}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Canvas>

                <Button
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Width="15"
                    Height="4"
                    Margin="0,20,65,24"
                    HorizontalAlignment="Right"
                    Content="{DynamicResource MinBtn}"
                    Style="{StaticResource ChoiceButton}"
                    ToolTip="最小化">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:InvokeCommandAction Command="{Binding MinWindowCmd}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>

                <Button
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Width="12"
                    Height="12"
                    Margin="0,16,42,20"
                    HorizontalAlignment="Right"
                    Content="{StaticResource MaxBtn}"
                    Style="{StaticResource ChoiceButton}"
                    ToolTip="最大化"
                    Visibility="{Binding ShowMaxButton}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:InvokeCommandAction Command="{Binding MaxWindowCmd}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>

                <Button
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Width="12"
                    Height="12"
                    Margin="0,16,42,20"
                    HorizontalAlignment="Right"
                    Content="{StaticResource RecoveryBtn}"
                    Style="{StaticResource ChoiceButton}"
                    ToolTip="向下还原"
                    Visibility="{Binding ShowNormalButton}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <i:InvokeCommandAction Command="{Binding RecoveryWindowCmd}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>

                <Button
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Width="12"
                    Height="12"
                    Margin="0,16,18,20"
                    HorizontalAlignment="Right"
                    Command="{Binding CloseWindowCmd}"
                    Content="{StaticResource CloseBtn}"
                    Style="{StaticResource CloseButton}"
                    ToolTip="关闭" />

                <ListBox
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalAlignment="Left"
                    Width="300"
                    Background="#f1f1f1"
                    BorderThickness="0"
                    
                    ItemsSource="{Binding ShowAwardsList}">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Microsoft YaHei"
                                FontSize="14"
                                Foreground="{Binding AwardsColor}"
                                Text="{Binding AwardsName}"
                                Visibility="{Binding VisibilityAwards}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,13,0,10"
                    HorizontalAlignment="Center"
                    FontFamily="Microsoft YaHei"
                    FontSize="20"
                    FontWeight="Bold"
                    Foreground="#000000"
                    Text="{Binding CurrentAwardName}" />

                <StackPanel
                    Grid.Row="2"
                    Grid.Column="1"
                    Background="#4e4e4e"
                    Orientation="Horizontal">
                    <TextBlock
                        Width="29"
                        Margin="35,13,0,8"
                        FontFamily="Microsoft YaHei"
                        FontSize="14"
                        FontStretch="Normal"
                        FontWeight="Normal"
                        Foreground="#f1f1f1"
                        Text="序号" />
                    <TextBlock
                        Width="30"
                        Margin="85,13,0,8"
                        FontFamily="Microsoft YaHei"
                        FontSize="15"
                        Foreground="#f1f1f1"
                        Text="姓名" />
                    <TextBlock
                        Width="46"
                        Margin="144,13,0,8"
                        FontFamily="Microsoft YaHei"
                        FontSize="15"
                        Foreground="#f1f1f1"
                        Text="身份证" />
                </StackPanel>

                <Border
                    Grid.Row="3"
                    Grid.Column="1"
                    Background="#f1f1f1"
                    BorderBrush="#4e4e4e"
                    BorderThickness="2"
                    Opacity="0.3">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="39" />
                            <RowDefinition Height="39" />
                            <RowDefinition Height="39" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="39" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="39" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="40" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="661" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid
                            Grid.Row="1"
                            Grid.Column="0"
                            Background="#4e4e4e" />
                        <Grid
                            Grid.Row="3"
                            Grid.Column="0"
                            Background="#4e4e4e" />
                        <Grid
                            Grid.Row="5"
                            Grid.Column="0"
                            Background="#4e4e4e" />
                        <Grid
                            Grid.Row="7"
                            Grid.Column="0"
                            Background="#4e4e4e" />
                        <Grid
                            Grid.Row="9"
                            Grid.Column="0"
                            Background="#4e4e4e" />

                        <Grid
                            Grid.Row="1"
                            Grid.Column="1"
                            Background="{Binding ColorSlider}" />
                        <Grid
                            Grid.Row="3"
                            Grid.Column="1"
                            Background="{Binding ColorSlider}" />
                        <Grid
                            Grid.Row="5"
                            Grid.Column="1"
                            Background="{Binding ColorSlider}" />
                        <Grid
                            Grid.Row="7"
                            Grid.Column="1"
                            Background="{Binding ColorSlider}" />
                        <Grid
                            Grid.Row="9"
                            Grid.Column="1"
                            Background="{Binding ColorSlider}" />
                    </Grid>
                </Border>

                <ListBox
                    Grid.Row="3"
                    Grid.Column="1"
                    Background="#DCDCDC"
                    BorderBrush="#4e4e4e"
                    BorderThickness="2"
                    ItemsSource="{Binding ShowDrawerList, Mode=TwoWay}"
                    Opacity="0.7">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Height="39" Orientation="Horizontal">
                                <TextBlock
                                    Width="20"
                                    Margin="36,12,0,12"
                                    FontFamily="Microsoft YaHei"
                                    FontSize="14"
                                    Foreground="#1C1C1C"
                                    Text="{Binding Id}" />
                                <TextBlock
                                    Width="60"
                                    Margin="86,11,0,11"
                                    FontFamily="Microsoft YaHei"
                                    FontSize="14"
                                    Foreground="#1C1C1C"
                                    Text="{Binding DrawName}" />
                                <TextBlock
                                    Margin="116,12,0,12"
                                    FontFamily="Microsoft YaHei"
                                    FontSize="14"
                                    Foreground="#1C1C1C"
                                    Text="{Binding DrawCode}" />
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Button
                    Grid.Row="4"
                    Grid.Column="1"
                    Width="80"
                    Height="30"
                    HorizontalAlignment="Center"
                    BorderBrush="#4e4e4e"
                    Command="{Binding LotteryButtonCmd}"
                    Content="{Binding LotteryName}"
                    Cursor="Hand"
                    FontSize="16"
                    IsEnabled="{Binding IsLottery}"
                    Style="{StaticResource ButtonBackground}" />

                <Button
                    Grid.Row="4"
                    Grid.Column="1"
                    Width="60"
                    Height="24"
                    Margin="0,20,70,10"
                    HorizontalAlignment="Right"
                    BorderBrush="#4e4e4e"
                    Command="{Binding ImportCmd}"
                    Content="导入"
                    Cursor="Hand"
                    Focusable="False"
                    FontSize="14"
                    IsEnabled="{Binding IsImport}"
                    Style="{StaticResource ButtonBackground}" />

                <Button
                    Grid.Row="4"
                    Grid.Column="1"
                    Width="60"
                    Height="24"
                    Margin="0,20,0,10"
                    HorizontalAlignment="Right"
                    BorderBrush="#4e4e4e"
                    Command="{Binding ExportCmd}"
                    Content="导出"
                    Cursor="Hand"
                    Focusable="False"
                    FontSize="14"
                    IsEnabled="{Binding IsExport}"
                    Style="{StaticResource ButtonBackground}" />
            </Grid>
        </Border>
    </Viewbox>
</Window>
